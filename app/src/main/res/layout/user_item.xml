<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cvMobileVerify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/m_8"
        android:layout_marginTop="@dimen/m_10"
        android:elevation="@dimen/m_5"
        card_view:cardElevation="@dimen/m_8"
        card_view:cardCornerRadius="@dimen/m_8">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/m_8">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/civProfileImage"
                android:layout_width="@dimen/m_96"
                android:layout_height="@dimen/m_96"
                android:src="@drawable/ic_profile"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/tvProfileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/m_16"
                android:layout_toRightOf="@id/civProfileImage"
                android:text="User"
                android:textSize="@dimen/t_26"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPasscode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvProfileName"
                android:layout_marginLeft="@dimen/m_16"
                android:layout_marginTop="@dimen/m_10"
                android:layout_toRightOf="@id/civProfileImage"
                android:text="# 123456"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/t_20" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>